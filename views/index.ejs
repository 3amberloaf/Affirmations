<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to the Affirmation Generator!</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Quick inline style for fade-in effect */
        .fade-in {
            animation: fadeIn 2s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const affirmationDisplay = document.querySelector('.affirmation strong');
            const button = document.querySelector('button');
        
            const affirmations = [
                "You are capable of achieving greatness.",
                "Today is going to be a good day.",
                "You are brimming with energy and overflowing with joy.",
                "Your body is healthy; your mind is brilliant; your soul is tranquil."
                // Add more affirmations as desired
            ];
        
            function getRandomAffirmation() {
                return affirmations[Math.floor(Math.random() * affirmations.length)];
            }
        
            button.addEventListener('click', function() {
                const affirmation = getRandomAffirmation();
                affirmationDisplay.textContent = affirmation;
                // Optional: Add a class to animate the new affirmation appearing
                affirmationDisplay.classList.remove('fade-in');
                void affirmationDisplay.offsetWidth; // Trigger reflow
                affirmationDisplay.classList.add('fade-in');
            });
        });
        </script>
        
</head>
